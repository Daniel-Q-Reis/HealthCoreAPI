# Terraform Variables - Default Values
# =====================================
# Copy this file to terraform.tfvars and customize for your deployment

environment = "prod"
location    = "eastus"

# Database credentials - CHANGE THESE!
db_admin_username = "healthcoreapi_admin"
db_admin_password = "ChangeMe123!SecurePassword"  # Min 8 chars, use Azure Key Vault in production

# PostgreSQL configuration (B1ms = 2GB RAM, sufficient for 15 concurrent users)
postgres_sku       = "B_Standard_B1ms"  # Upgrade to B2s (4GB) if AI workloads increase
postgres_storage_mb = 32768  # 32GB

# Redis configuration (C1 = 1GB, recommended for Celery stability)
redis_capacity = 1

# Django API autoscaling
django_cpu         = 0.25
django_memory      = "0.5Gi"
django_min_replicas = 0  # Scale to zero during idle (save costs)
django_max_replicas = 3

# Resource tags
tags = {
  Project     = "HealthCoreAPI"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "Daniel de Queiroz Reis"
  Region      = "East US"
}
